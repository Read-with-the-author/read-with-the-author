{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron shadow p-3 mb-5 rounded">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-8">

                    <h1 class="display-4">{{ bookSummary.title }}</h1>
                    {% if bookSummary.subtitle %}
                        <h2>{{ bookSummary.subtitle }}</h2>
                    {% endif %}
                    <p class="lead">Discuss the book, ask questions, talk with other readers</p>
                    <hr class="my-4">
                    <p>Sign up now and join video calls where you can ask questions to the author, share your feedback, and learn from other readers.</p>
                </div>
                <div class="col-sm-3">
                    <a href="{{ bookSummary.url }}" target="_blank">
                        <img src="{{ path('title_page_image') }}" class="img-fluid img-thumbnail" alt="Title page"/>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-12 col-md-6">
            <h2>Already a member?</h2>
            {{ form(requestAccessTokenForm) }}
        </div>
        <div class="col-sm-12 col-md-6">
            <h2>Not a member yet? Sign up!</h2>
            {{ form(requestAccessForm) }}
        </div>


    </div>

{% endblock body %}
