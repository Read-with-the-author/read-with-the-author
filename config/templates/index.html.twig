{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron">
        <div class="row">
            <div class="col-sm-8">

                <h1 class="display-4">{{ bookSummary.title }}</h1>
                {% if bookSummary.subtitle %}
                    <h2>{{ bookSummary.subtitle }}</h2>
                {% endif %}
                <p class="lead">Read the book together with the author</p>
                <hr class="my-4">

                <h3>Already a member?</h3>
                {{ form(requestAccessTokenForm) }}
            </div>
            <div class="col-sm-3">
                <a href="{{ bookSummary.url }}" target="_blank">
                    <img src="{{ path('title_page_image') }}" class="img-fluid" alt="Title page"/>
                </a>
            </div>
        </div>
    </div>

    <h2>Not a member yet? Sign up</h2>
    {{ form(requestAccessForm) }}

{% endblock body %}
